@model IEnumerable<Author>

<br/>
<br/>
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-10">
            <h2 class="text-info"> Authors List</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-action="Upsert" class="btn btn-info form-control"> Create New </a>
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Full Name
                    </th>
                    <th>
                        Birth Date
                    </th>
                    <th>
                        Location
                    </th>
                    <th></th>
                </tr>
                @foreach (Author item in Model)
                {
                    <tr>
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.BirthDate.ToShortDateString()
                        </td>
                        <td>
                            @item.Location
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Author_Id">
                                Edit
                            </a>

                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Author_Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No author exists...</p>
        }
    </div>
</div>